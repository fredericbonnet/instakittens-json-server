    "mocha": "^5.2.0",
    "mock-require": "^3.0.2",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.6",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.3.0"
